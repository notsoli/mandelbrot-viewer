extends layout

block scripts
  script(src="/javascripts/viewer.js")
  link(rel='stylesheet', href='/stylesheets/viewer.css')

block content
  div#interface
    div#topUI
      div#reset
        button#resetView Reset View
      div#iterations
        p#iterationsLabel Iterations:
        input(type="number", min="1", max="999", value="100" id="iterationsInput")
      div#color
        div#red
          p#redLabel 25
          input(type="range", min="0", max="255", value="25", id="redSlider")
          button#redRandomize Randomize
        div#green
          p#greenLabel 119
          input(type="range", min="0", max="255", value="119", id="greenSlider")
          button#greenRandomize Randomize
        div#blue
          p#blueLabel 68
          input(type="range", min="0", max="255", value="68", id="blueSlider")
          button#blueRandomize Randomize
    div#bottomUI
      div#positionInfo
        p#position Position:
      div#scaleInfo
        p#scale Scale:
      div#credits
        p Written By Sam Randa

  canvas#can(width=800 height=600)
